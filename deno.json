{
  "fmt": {
    "files": {
      "exclude": [
        "node_modules/",
        "packages/node"
      ]
    }
  },
  "test": {
    "files": {
      "exclude": [
        "node_modules/",
        "packages/node"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "node_modules/",
        "packages/node"
      ]
    }
  },
  "tasks": {
    "test": "deno test --watch ./packages/deno",
    "check": "deno fmt --check ./packages/deno",
    "fmt": "deno fmt ./packages/deno",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --watch --unstable -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "importMap": "./.vscode/import_map.json"
}
