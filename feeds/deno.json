{
  "name": "@stewpot/feeds",
  "description": "Feed utilities and CLI",
  "version": "0.11.0",
  "license": "MIT",
  "exports": {
    ".": "./main.ts",
    "./cli": "./cli.ts"
  },
  "imports": {
    "@stewpot/html": "jsr:@stewpot/html@^0.1.0",
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/cli": "jsr:@std/cli@^1.0.28",
    "@std/fmt": "jsr:@std/fmt@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.23",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "@std/ulid": "jsr:@std/ulid@^1.0.0",
    "feedsmith": "npm:feedsmith@^2.9.0"
  },
  "publish": {
    "exclude": [
      "*_test.ts",
      "fixtures",
      "__snapshots__"
    ]
  },
  "tasks": {
    "dev:reader": {
      "description": "Run CLI reader application for development",
      "command": "deno -P --watch=assets cli.ts reader"
    },
    "doc:lint": {
      "description": "Lint package export modules",
      "command": "deno doc --lint main.ts cli.ts"
    },
    "tests": {
      "description": "Run lints & tests",
      "command": "deno test -P --allow-run"
    }
  },
  "permissions": {
    "default": {
      "env": true,
      "read": true,
      "write": true,
      "net": true
    }
  },
  "compilerOptions": {
    "checkJs": true,
    "lib": [
      "deno.window",
      "deno.unstable",
      "dom"
    ]
  }
}
